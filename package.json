{
  "name": "listerlyify-server",
  "version": "0.0.1",
  "description": "GraphQL Server for interacting with the Twitter API",
  "main": "build/server.js",
  "repository": "git@github.com:listerlyify/listerlyify-server.git",
  "author": "Nicholas Cronquist",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "yarn build && node build/server.js",
    "quick-start": "node build/server.js",
    "qs": "yarn quick-start",
    "build": "tsc -p tsconfig-build.json",
    "watch-node": "nodemon build/server.js",
    "watch": "concurrently yarn:watch-node yarn:watch-ts",
    "watch-ts": "tsc -w",
    "test": "jest",
    "ci:test": "jest --forceExit --coverage --verbose",
    "watch-test": "yarn test --watchAll",
    "format": "eslint . --ext .ts --quiet --fix",
    "lint": "tsc -p tsconfig.json --noEmit && eslint . --ext .ts"
  },
  "lint-staged": {
    "**/*.{ts,json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "apollo-server-express": "^2.12.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/eslint": "^6.8.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.5.3",
    "lint-staged": "^10.2.2",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  }
}
