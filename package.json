{
  "name": "listerlyify-server",
  "version": "0.0.1",
  "description": "GraphQL and Auth Server for interacting with the Twitter API",
  "main": "build/server.js",
  "repository": "git@github.com:listerlyify/listerlyify-server.git",
  "author": "Nicholas Cronquist <nick@ncronquist.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "coverage": "NODE_ENV=test NODE_CONFIG_DIR=./src/config nyc mocha --reporter=min",
    "format": "eslint . --ext .ts --quiet --fix",
    "lint": "tsc -p tsconfig.json --noEmit && eslint . --ext .ts && editorconfig-checker",
    "qs": "yarn quick-start",
    "quick-start": "NODE_CONFIG_DIR=./src/config node build/server.js",
    "start": "yarn build && yarn quick-start",
    "test": "NODE_ENV=test NODE_CONFIG_DIR=./src/config mocha",
    "watch": "concurrently yarn:watch-node yarn:watch-ts",
    "watch-node": "NODE_CONFIG_DIR=./src/config nodemon build/server.js",
    "watch-test": "yarn test --watch",
    "watch-ts": "tsc -w -p tsconfig-build.json"
  },
  "dependencies": {
    "apollo-server-express": "^2.14.2",
    "config": "^3.3.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pem-jwk": "^2.0.0",
    "twitter-lite": "^0.13.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.11",
    "@types/config": "^0.0.36",
    "@types/eslint": "^6.8.0",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^7.0.2",
    "@types/nock": "^11.1.0",
    "@types/node": "^13.13.5",
    "@types/pem-jwk": "^1.5.0",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "chai": "^4.2.0",
    "concurrently": "^5.2.0",
    "decache": "^4.6.0",
    "editorconfig-checker": "^3.1.0",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-mocha": "^7.0.1",
    "eslint-plugin-prettier": "^3.1.3",
    "mocha": "^7.2.0",
    "nock": "^12.0.3",
    "nodemon": "^2.0.3",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.19",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.8.3"
  }
}
