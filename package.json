{
  "name": "listerlyify-server",
  "version": "0.0.1",
  "description": "GraphQL and Auth Server for interacting with the Twitter API",
  "main": "build/server.js",
  "repository": "git@github.com:listerlyify/listerlyify-server.git",
  "author": "Nicholas Cronquist <nick@ncronquist.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "format": "eslint . --ext .ts --quiet --fix",
    "lint": "tsc -p tsconfig.json --noEmit && eslint . --ext .ts",
    "qs": "yarn quick-start",
    "quick-start": "node build/server.js",
    "start": "yarn build && yarn quick-start",
    "test": "jest --forceExit",
    "watch": "concurrently yarn:watch-node yarn:watch-ts",
    "watch-node": "nodemon build/server.js",
    "watch-test": "yarn test --watchAll",
    "watch-ts": "tsc -w -p tsconfig-build.json"
  },
  "dependencies": {
    "apollo-server-express": "^2.13.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/eslint": "^6.8.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.10.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^25.5.1",
    "typescript": "^3.8.3"
  }
}
